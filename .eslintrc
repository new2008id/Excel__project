{
    // базовая конфигурация для eslint
    "parser": "babel-eslint",
    "env": {
        "es6": true,
        "browser": true,
        "node": true,
        "jest/globals": true 
    },  // обозначит, где код будет использоваться
    "rules": { // описываем свои  правила для проекта
        "semi": "off",
        "arrow-parents": "off",
        "comma-dangle": "off",
        "require-jsdoc": "off",
        "linebreak-style": ["error, windows"],
        "operator-linebreak": "off"
    }, 
    "plugins": ["jest"],
    "extends": ["eslint:recommended", "google"]
}